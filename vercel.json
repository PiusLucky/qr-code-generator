{
  "version": 2,
  "env": {
    "DATABASE_URL": "@db_url",
    "FRONTEND_URL": "@fe_url"
  },
  "builds": [
    {
      "src": "src/main.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/main.ts",
      "methods": ["GET", "POST", "PUT", "DELETE"]
    }
  ]
}
